{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": ["node", "vite/client"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
